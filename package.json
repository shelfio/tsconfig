{
  "name": "@shelf/tsconfig",
  "version": "0.1.0",
  "description": "tsconfig",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "files": [
    "backend.json",
    "frontend.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "devDependencies": {
    "@shelf/prettier-config": "1.0.0",
    "@types/node": "12",
    "husky": "8.0.3",
    "lint-staged": "10.5.4",
    "prettier": "2.8.8"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
